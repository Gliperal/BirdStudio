<UserControl x:Class="BirdStudio.BranchGroupHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BirdStudio"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="{DynamicResource BranchHeader.Background}">
        <TextBlock
            Name="nameDisplay"
            FontFamily="Consolas"
            FontSize="15"
            TextAlignment="Center"
            Foreground="{DynamicResource BranchHeader.Foreground}"
        />
        <TextBox
            Name="nameEdit"
            Visibility="Collapsed"
            FontFamily="Consolas"
            FontSize="15"
            Background="{DynamicResource BranchHeader.Background}"
            Foreground="{DynamicResource BranchHeader.Foreground}"
        />
    </StackPanel>
</UserControl>
